<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 当密码是可见状态 (state_checked="true" 表示密码输入框的"显示密码"功能被激活) -->
    <!-- 此时图标应该是 "睁开的眼睛"，表示当前可见 -->
    <item android:drawable="@drawable/show_password" android:state_checked="true" />

    <!-- 当密码是隐藏状态 (默认状态) -->
    <!-- 此时图标应该是 "闭合的眼睛"或"带斜杠的眼睛"，表示当前隐藏 -->
    <item android:drawable="@drawable/hide_password" />

</selector> 